        <pre>@HtmlCodeHelper.ReadHtml("./Pages/Exemple/Formatare.cshtml", 11, 24)</pre>
    </code>

    <h5>Stiluri logice</h5>
    <code>
        <pre>@HtmlCodeHelper.ReadHtml("./Pages/Exemple/Formatare.cshtml", 26, 38)</pre>
    </code>
</section>